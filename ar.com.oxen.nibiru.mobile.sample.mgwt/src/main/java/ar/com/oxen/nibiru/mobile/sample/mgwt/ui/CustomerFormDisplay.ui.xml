<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">

	<ui:with field='msg'
		type='ar.com.oxen.nibiru.mobile.sample.mgwt.ui.GwtSampleMessages' />
	<ui:with field='res'
		type='ar.com.oxen.nibiru.mobile.sample.mgwt.ui.Resources' />

	<ui:style>
		.title {
			left: 10px;
			position: absolute;
			top: 15px;
		}
		.add {
			position: absolute;
			right: 10px;
			top: 10px;
		}
		.list {
			bottom: 10px;
			left: 10px;
			position: absolute;
			right: 10px;
			top: 50px;
		}
	</ui:style>
	<g:HTMLPanel width="100%">
	    <m:form.Form>
	        <m:form.FormEntry text="{msg.firstName}">
	            <m:input.MTextBox ui:field="firstName"/>
	        </m:form.FormEntry>
	        <m:form.FormEntry text="{msg.lastName}">
	            <m:input.MTextBox ui:field="lastName"/>
	        </m:form.FormEntry>
	    </m:form.Form>
		<m:button.Button ui:field="cancel" text="{msg.cancel}" />
		<m:button.Button ui:field="save" text="{msg.save}" />
	</g:HTMLPanel>
</ui:UiBinder> 